{
	"compilerOptions": {
		"target": "ES2017",
		"module": "none",
		"lib": ["DOM", "ES2017"],
		"rootDir": "./",
		"outDir": "./",
		"strict": false,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"sourceMap": false,
		"declaration": false
	},
	"include": [
		"script.ts",
		"todo_array.ts"
	],
	"exclude": [
		"node_modules",
		"**/*.d.ts"
	]
}


